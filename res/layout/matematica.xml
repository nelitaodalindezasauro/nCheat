<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xmlmtm"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/delta_baskhara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/delta"
            android:textSize="30sp" />

        <Button
            android:id="@+id/baskhara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/baskhara"
            android:textSize="30sp" />

        <Button
            android:id="@+id/formGPAlayoutMtm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/formGPA"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnareas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/areas"
            android:textSize="30sp" />
    </LinearLayout>

</ScrollView>